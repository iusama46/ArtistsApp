    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FreelanceApp">
        <activity
            android:name=".activities.ImageActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SkillSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".consumer.ReviewsActivity"
            android:exported="false" />
        <activity
            android:name=".artist.ArtistMainActivity"
            android:exported="false"
            android:theme="@style/Theme.NoActionBarFreelanceApp" />
        <activity
            android:name=".artist.ArtistCompleteProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.NoActionBarFreelanceApp" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.NoActionBarFreelanceApp" />
        <activity
            android:name=".artist.ArtistProfileActivity"
            android:exported="false" />
        <activity
            android:name=".chat.ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.NoActionBarFreelanceApp" />
        <activity
            android:name=".consumer.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.NoActionBarFreelanceApp" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.NoActionBarFreelanceApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>